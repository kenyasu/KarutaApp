<p id="notice"><%= notice %></p>

<h1>Schedule Practices</h1>

<%= month_calendar events: @schedule_practices do |date, meetings| %>
  <%= date %>

  <% meetings.each do |meeting| %>
    <div>
      <%= meeting.name %>
    </div>
  <% end %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Place</th>
      <th>Note</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @schedule_practices.each do |schedule_practice| %>
      <tr>
        <td><%= schedule_practice.date %></td>
        <td><%= schedule_practice.time %></td>
        <td><%= schedule_practice.place %></td>
        <td><%= schedule_practice.note %></td>
        <td><%= schedule_practice.user_id %></td>
        <td><%= link_to 'Show', schedule_practice %></td>
        <td><%= link_to 'Edit', edit_schedule_practice_path(schedule_practice) %></td>
        <td><%= link_to 'Destroy', schedule_practice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

</table>

<br>

<%= link_to 'New Schedule Practice', new_schedule_practice_path %>
