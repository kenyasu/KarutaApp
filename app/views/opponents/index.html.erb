<p id="notice"><%= notice %></p>

<h1>Opponents</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Gender</th>
      <th>Integer</th>
      <th>Grade</th>
      <th>Hand</th>
      <th>Belongs</th>
      <th>Style</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @opponents.each do |opponent| %>
      <tr>
        <td><%= opponent.name %></td>
        <td><%= opponent.gender_id %></td>
        <td><%= opponent.integer %></td>
        <td><%= opponent.grade_id %></td>
        <td><%= opponent.hand_id %></td>
        <td><%= opponent.belongs %></td>
        <td><%= opponent.style_id %></td>
        <td><%= opponent.user_id %></td>
        <td><%= link_to 'Show', opponent %></td>
        <td><%= link_to 'Edit', edit_opponent_path(opponent) %></td>
        <td><%= link_to 'Destroy', opponent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Opponent', new_opponent_path %>
