<p id="notice"><%= notice %></p>

<h1>Age Classes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @age_classes.each do |age_class| %>
      <tr>
        <td><%= age_class.name %></td>
        <td><%= link_to 'Show', age_class %></td>
        <td><%= link_to 'Edit', edit_age_class_path(age_class) %></td>
        <td><%= link_to 'Destroy', age_class, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Age Class', new_age_class_path %>
