<p id="notice"><%= notice %></p>

<h1>Jokers</h1>

<table>
  <thead>
    <tr>
      <th>Result</th>
      <th>Karuta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jokers.each do |joker| %>
      <tr>
        <td><%= joker.result_id %></td>
        <td><%= joker.karuta_id %></td>
        <td><%= link_to 'Show', joker %></td>
        <td><%= link_to 'Edit', edit_joker_path(joker) %></td>
        <td><%= link_to 'Destroy', joker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

