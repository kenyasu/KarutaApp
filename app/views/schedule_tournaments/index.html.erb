<p id="notice"><%= notice %></p>

<h1>Schedule Tournaments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Tournament</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedule_tournaments.each do |schedule_tournament| %>
      <tr>
        <td><%= schedule_tournament.user_id %></td>
        <td><%= schedule_tournament.tournament_id %></td>
        <td><%= link_to 'Show', schedule_tournament %></td>
        <td><%= link_to 'Edit', edit_schedule_tournament_path(schedule_tournament) %></td>
        <td><%= link_to 'Destroy', schedule_tournament, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

